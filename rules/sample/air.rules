rule "AIR Bed OFF"
when
        Item Air_Bedroom received command OFF
then
                if(Air_Bedroom.state == ON ) {
                REMOTE2.sendCommand("miIO.ir_play{\"key\":\"501\",\"code\":\"\"}")
                ulinealert.sendCommand(" Air BED OFF")
                }
end
rule "AIR Bed ON"
when
        Item Air_Bedroom received command ON
then
                if(Air_Bedroom.state == OFF ) {
                REMOTE2.sendCommand("miIO.ir_play{\"key\":\"402\",\"code\":\"\"}")
                ulinealert.sendCommand(" Air BED ON")
                }
end
